<config xmlns='http://www.ehcache.org/v3'>

    <cache-template name="default">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache-template>

    <cache alias="categories" uses-template="default"/>
    <cache alias="categoryWithProducts" uses-template="default"/>
    <cache alias="productDetails" uses-template="default"/>
    <cache alias="homepage" uses-template="default"/>

</config>